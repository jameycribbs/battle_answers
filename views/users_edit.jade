extend layout

block content
  div.starter-template
    form(method='post')
      input(name='_id', type='hidden', value=edit_user._id.toHexString())
      div.form-group
        label(for='editUsername') Username
        input(type='text', name='username', id='editUsername', value=edit_user.username)
      div.form-group
        label(for='editPassword') Password
        input(type='text', name='password', id='editPassword', value=edit_user.password)
      div.form-group
        label(for='editRoles') Roles
        textarea.form-control(name='roles', rows=2, cols=50, id='editRoles')
          = role_str
      button(type='submit', class='btn btn-default') Update
