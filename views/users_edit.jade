extend layout

block content
  div.starter-template
    if (message)
      p= message
    form(method='post')
      fieldset
        input(name='id', type='hidden', value=user.id)
        div.form-group
          label(for='editUsername') Username
          input.form-control(type='text', name='username', id='editUsername', value=edit_user.username)
        div.form-group
          label(for='editPassword') Password
          input.form-control(type='text', name='password', id='editPassword', value=edit_user.password)
        div.form-group
          label(for='editRoles') Roles
          textarea.form-control(name='roles', rows=2, cols=50, id='editRoles')
            = edit_user.roles
          p.help-block Enter one or more roles each separated by a space. Available roles are: super rules-admin rules-minion.
        button.btn.btn-default(type='submit') Update
